@model PROYECTO_FLK.Models.TipoDeVehiculo
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "EliminarTipoVehiculo";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Eliminar Tipo de Vehículo</title>
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

    <div class="container mx-auto p-8 bg-white shadow-lg rounded-lg">
        <h2 class="text-2xl font-bold mb-6 text-gray-800">Eliminar Tipo de Vehículo</h2>

        <div class="bg-white shadow-md rounded-lg p-6 mb-4">
            <p class="text-gray-700 mb-2"><strong>Tipo de Vehículo:</strong> @Model.TipoDeVehiculo1</p>
            <p class="text-gray-700 mb-2"><strong>Capacidad de Carga:</strong> @Model.CapacidadCarga</p>
            <p class="text-gray-700 mb-2"><strong>Descripción:</strong> @Model.Descripcion</p>
            <p class="text-red-600 font-bold">¿Estás seguro de que deseas eliminar este tipo de vehículo?</p>
        </div>

        <form asp-action="EliminarTipoVehiculo" method="post">
            <input type="hidden" asp-for="PkTipoDeVehiculos" />
            <div class="flex justify-between mt-6">
                <a href="@Url.Action("Index", "GestionarVehiculos")" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">Cancelar</a>
                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">Eliminar Tipo de Vehículo</button>
            </div>
        </form>
    </div>

</body>

</html>
