@model PROYECTO_FLK.Models.Empresa
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Empresa</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="max-w-lg mx-auto mt-10 bg-white p-6 rounded shadow-lg">
        <h2 class="text-2xl font-bold mb-4 text-red-600">Eliminar Empresa</h2>
        <p class="mb-6">¿Estás seguro de que deseas eliminar la siguiente empresa?</p>

        <div class="mb-4">
            <strong>RUC:</strong> @Model.Ruc
        </div>
        <div class="mb-4">
            <strong>Nombre:</strong> @Model.Nombre
        </div>
        <div class="mb-4">
            <strong>Razón Social:</strong> @Model.RazonSocial
        </div>

        <form asp-action="Eliminar" method="post">
            <div class="flex justify-end">
                <a href="@Url.Action("GestionarEmpresas", "Empresas")" class="bg-gray-500 text-white font-bold py-2 px-4 rounded mr-2">Cancelar</a>
                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">Eliminar</button>
            </div>
        </form>
    </div>
</body>
</html>

