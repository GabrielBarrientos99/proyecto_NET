@model PROYECTO_FLK.Models.Inspeccione

<form asp-action="CompletarInspeccion" asp-controller="AgendarCita" method="post" class="space-y-4">
    <div>
        <label class="block text-gray-700 font-bold">Descripción</label>
        <textarea asp-for="Descripcion" class="form-textarea mt-1 block w-full rounded-md border-gray-300"></textarea>
    </div>
    <div>
        <label class="block text-gray-700 font-bold">Ubicación</label>
        <input asp-for="Ubicacion" class="form-input mt-1 block w-full rounded-md border-gray-300" />
    </div>
    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">Guardar</button>
</form>
